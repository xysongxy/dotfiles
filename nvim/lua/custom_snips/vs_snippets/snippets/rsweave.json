{
	// Place your snippets for rsweave here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"dollar math": {
		//"scope": "tex,latex",
		"prefix": "mm", // this is what you type in the editor to get the snippet suggestion
		"body": ["\\$$1\\$"],
	},

	"R Sweave Chunk": {
    "prefix": "rc",
    "body": [
      "<<$1, echo=$2, results=$3>>=",
      "  $0",
      "@"
    ],
    "description": "Insert R Sweave Chunk"
	},


	"Document Setup": {
		"prefix": "docsetup",
		"body": [
		"\\documentclass{article}",
		"\\usepackage{Sweave}",
		"\\begin{document}",
		"\\SweaveOpts{concordance=TRUE}",
		"$0",
		"\\end{document}"
		],
		"description": "Insert basic document setup for Rnw file"
	},


	"Include Graphics": {
		"prefix": "includegraphics",
		"body": [
		"\\begin{figure}[h]",
		"  \\centering",
		"  \\includegraphics[width=0.8\\textwidth]{$1}",
		"  \\caption{$2}",
		"  \\label{fig:$3}",
		"\\end{figure}"
		],
		"description": "Insert include graphics environment"
	},
	"Inline R Code": {
		"prefix": "rin",
		"body": [
		"Sexpr{$1}"
		],
		"description": "Insert inline R code"
	}
}